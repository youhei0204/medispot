<header>
  <div class="header-inner content-width contents-tidy">
    <div class="header-left-block contents-tidy">
      <div class="logo">
        <%= link_to image_tag('logo.png', alt:'header-logo'), root_path %>
      </div>
      <%= form_with url: '#', method: :get, local: true ,class: 'search-box' do |f| %>
        <%= f.text_field :area, class: 'header-form', value: @area, placeholder: 'エリア検索' %>
        <%= f.text_field :keyword, class: 'header-form', value: @keyword, placeholder: 'キーワード検索' %>
        <%= f.submit '検索'%>
      <% end %>
    </div>
    <% if user_signed_in? %>
      <div class="header-right-block contents-tidy">
        <%= link_to 'プロフィール変更', edit_user_registration_path %>
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </div>
    <% else %>
      <div class="header-right-block">
        <%= link_to 'サインアップ', new_user_registration_path %>
        <%= link_to 'ログイン', new_user_session_path %>
      </div>
    <% end %>
  </div>
  <% if notice.present? %>
    <p class="flash notice">
      <%= notice %> 
    </p>
  <% end %>
</header>
