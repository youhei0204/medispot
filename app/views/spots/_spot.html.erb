<%= link_to spot, class:'spot-box clearfix hover-lightgray' do %>
  <div class="spot-info">
    <h1 class="spot-name"><%= spot.name %></h1>
    <p class="spot-star">
      <span class="rate" data-score="<%= spot.average_rate %>"></span>
      <span><%= spot.average_rate.round(2) %></span>
      <span>
        <i class="fas fa-regular fa-comment-dots"></i>
        <%= spot.reviews.count %>ä»¶
      </span>
    </p>
    <p class="spot-address">
      <i class="fas fa-map-marker-alt"></i>
      <%= spot.address %>
    </p>
  </div>
  <div class="spot-image">
    <% if spot.images(@max_slider_image_num).present? %>
      <ul class="slider-no-allow">
        <% spot.images(@max_slider_image_num).each do |image| %>
          <li>
            <%= image_tag(image) %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <%= image_tag('noimage.png') %>
    <% end %>
  </div>
<% end %>
